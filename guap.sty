\newcommand{\underoverline}[3][5cm]{
    \begin{minipage}{#1}
        \centering \vspace{1em}
        #2 \\
        \vspace{-0.9em}
        \rule{\textwidth}{0.5pt} \\
        \vspace{-0.3em}
        \footnotesize #3
    \end{minipage}
}

